<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project_inf201.UniversityRegistrationPageController">
   <center>
      <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="508.0" prefWidth="900.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="508.0" fitWidth="900.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../images/UniversityRegistrationPage.png" />
               </image>
            </ImageView>
            <Button fx:id="LoginButton" layoutX="758.0" layoutY="39.0" mnemonicParsing="false" prefHeight="38.0" prefWidth="106.0" style="-fx-background-color: #57A6DA; -fx-background-radius: 50;" text="Login" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="17.0" />
               </font>
            </Button>
            <TextField fx:id="universityName" layoutX="533.0" layoutY="280.0" prefHeight="31.0" prefWidth="230.0" promptText="University name" style="-fx-background-radius: 50;" />
            <PasswordField fx:id="passwordField" layoutX="533.0" layoutY="322.0" prefHeight="31.0" prefWidth="230.0" promptText="University password" style="-fx-background-radius: 50;" />
            <Line fx:id="password_Indicator" endX="230.0" layoutX="533.0" layoutY="365.0" stroke="#57a6da" />
            <Button fx:id="SignUpButton" layoutX="534.0" layoutY="376.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="229.0" style="-fx-background-color: #57A6DA; -fx-background-radius: 50;" text="Sign Up" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="17.0" />
               </font>
            </Button>
            <TextField fx:id="email" layoutX="533.0" layoutY="240.0" prefHeight="31.0" prefWidth="230.0" promptText="Email" style="-fx-background-radius: 50;" />
            <Button fx:id="chooseFile" layoutX="533.0" layoutY="180.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="230.0" style="-fx-background-radius: 50; -fx-background-color: #57A6DA;" text="Choose File" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Button>
            <TextField fx:id="ConfirmationCode" layoutX="573.0" layoutY="240.0" prefHeight="31.0" prefWidth="150.0" promptText="Confirmation code" style="-fx-background-radius: 50;" visible="false" />
            <Button fx:id="SendButton" layoutX="583.0" layoutY="291.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="130.0" style="-fx-background-color: #57A6DA; -fx-background-radius: 50;" text="Send" textFill="WHITE" visible="false">
               <font>
                  <Font name="System Bold" size="17.0" />
               </font>
            </Button>
            <Line fx:id="file_Indicator" endX="230.0" layoutX="533.0" layoutY="227.0" stroke="#ed1c24" />
            <Button fx:id="infoButton" layoutX="772.0" layoutY="180.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="33.0" style="-fx-background-color: #57A6DA; -fx-background-radius: 50;" text="?" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
