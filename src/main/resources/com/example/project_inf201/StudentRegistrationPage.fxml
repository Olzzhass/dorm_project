            <Button fx:id="LoginButton" layoutX="758.0" layoutY="39.0" mnemonicParsing="false" prefHeight="38.0" prefWidth="106.0" style="-fx-background-color: #57A6DA; -fx-background-radius: 50;" text="Login" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="17.0" />
               </font>
            </Button>
            <TextField fx:id="StudentName" layoutX="533.0" layoutY="280.0" prefHeight="31.0" prefWidth="230.0" promptText="Student name and surname" style="-fx-background-radius: 50;" />
            <PasswordField fx:id="passwordField" layoutX="533.0" layoutY="322.0" prefHeight="31.0" prefWidth="230.0" promptText="Student password" style="-fx-background-radius: 50;" />
            <Line fx:id="password_Indicator" endX="230.0" layoutX="533.0" layoutY="365.0" stroke="#57a6da" />
