            <Button fx:id="SendButton" layoutX="583.0" layoutY="291.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="130.0" style="-fx-background-color: #57A6DA; -fx-background-radius: 50;" text="Send" textFill="WHITE" visible="false">
               <font>
                  <Font name="System Bold" size="17.0" />
               </font>
            </Button>
